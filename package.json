{
  "name": "turboaery",
  "version": "0.0.3",
  "description": "Assistant tool for League players",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "rescripts eject",
    "build-app": "rescripts build && electron-builder --dir",
    "pack-app": "rescripts build && electron-builder",
    "electron-dev": "node scripts/electron-dev.js",
    "lint": "eslint --ext .js --ext .ts --ext .tsx ./; exit 0",
    "lint:write": "eslint --ext .js --ext .ts --ext .tsx ./ --fix",
    "pretty-quick": "pretty-quick --pattern \"**/*.*(js|ts|tsx)\"",
    "pretty-quick-staged": "pretty-quick --staged --pattern \"**/*.*(js|ts|tsx)\""
  },
  "lint-staged": {
    "*.(js|tsx|ts)": [
      "npm run lint:write",
      "npm run pretty-quick-staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "build": {
    "productName": "TurboAery",
    "copyright": "Dixaba",
    "appId": "com.dixaba.turboaery",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "icon.icns",
      "category": "public.app-category.utilities"
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dixaba/TurboAery.git"
  },
  "author": "Dixaba <dixaba@yandex.ru> (https://github.com/Dixaba)",
  "contributors": [
    "Arseny Kruglikov <kruglikov.arseny@gmail.com> (https://github.com/arsenykruglikov)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dixaba/TurboAery/issues"
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "babel-plugin-styled-components"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "@types/jest": "24.0.13",
    "@types/lodash": "^4.14.133",
    "@types/node": "^12.0.4",
    "@types/react": "^16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/styled-components": "^4.1.15",
    "axios": "^0.18.0",
    "electron-is-dev": "^1.1.0",
    "kayn": "^0.9.8",
    "lcu-connector": "^2.1.2",
    "lodash": "^4.17.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "styled-components": "^4.2.1",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.10",
    "@rescripts/rescript-env": "0.0.10",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "babel-plugin-styled-components": "^1.10.0",
    "concurrently": "^4.1.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "wait-on": "^3.2.0",
    "webpack-node-externals": "^1.7.2"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}
